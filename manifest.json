{
  "manifest_version": 3,
  "name": "极简番茄钟",
  "description": "一个自定义网页番茄钟",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": { 
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": { "service_worker": "sw.js" },
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [{
    "resources": ["icon.png"],
    "matches": ["<all_urls>"]
  }]
}